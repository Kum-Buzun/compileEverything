page=http://ftp.gnu.org/gnu/gcc/gcc-3.4.6/
url=http://ftp.gnu.org/gnu/gcc/gcc-3.4.6/
precond=set -e ; mkdir -p ${H}/.cpl/src/@@NAMEVER@@/objdir ; mkdir -p "${H}/.cpl/src/@@NAMEVER@@/objdir/lib/gcc/i686-pc-linux-gnu" ; ln -fs /usr/lib/i386-linux-gnu "${H}/.cpl/src/@@NAMEVER@@/objdir/lib/gcc/i686-pc-linux-gnu/3.4.6" ; anos=$(uname -v) ; if [[ "${anos#*Ubuntu}" != "${anos}" && ! -e /usr/include/asm ]] ; then ${H}/.cpl/sudo_gcc ; fi ; set +e; patch -r - -N ${H}/.cpl/src/@@NAMEVER@@/libstdc++-v3/acinclude.m4 < ${H}/.cpl/acinclude.m4.patch ; set -e
cdpath=${H}/.cpl/src/@@NAMEVER@@/objdir
makefile=objdir/Makefile
pre=gen_sed -i "6227 s/^.*$/LIBS=\" -lintl -liconv -L${EHULL} \$LIBS\"/" "${H}/.cpl/src/@@NAMEVER@@/libstdc++-v3/configure"
configcmd=../configure --prefix=${HULA}/@@NAMEVER@@ --enable-shared --disable-multilib --enable-languages=c,c++ --with-as=@@PATH_AS@@ --with-ld=@@PATH_LD@@ --disable-libstdcxx-pch
post=find "${H}/.cpl/src/@@NAMEVER@@" -name "libstdc++.so" -exec rm {} \; ; if [[ -e /usr/lib/i386-linux-gnu ]] ; then mkdir -p "${H}/usr/local/apps/gcc-3.4.6/i686-pc-linux-gnu" ; ln -fs /usr/lib/i386-linux-gnu "${H}/usr/local/apps/gcc-3.4.6/i686-pc-linux-gnu/lib" ; fi
