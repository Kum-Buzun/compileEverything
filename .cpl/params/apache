nameurl=httpd
verinclude=-2.2
configcmd=./configure --prefix=${HULA}/@@NAMEVER@@ --enable-ssl=shared --enable-ssl --with-ssl=${HUL}/ssl --enable-proxy --enable-proxy-connect --enable-proxy-ftp --enable-proxy-http --with-ldap --enable-ldap --enable-authnz-ldap --enable-authn-alias --with-apr=${HUL} --with-apr-util=${HUL} --enable-mods-shared=all --with-z=${HUL} @@WITHOUT_GNU_LD@@
post=ln -fs apps/@@NAMEVER@@ ${HUL}/apache2 ; cp "${H}/apache/env.conf.tpl" "${H}/apache/env.conf" ; gen_sed -i "s/@H@/${EH}/g" "${H}/apache/env.conf" ; gen_sed -i "s/@HOSTNAME@/$(hostname -s)/g" "${H}/apache/env.conf" ; fqn=$(nslookup $(hostname -i)) ; fqn=${fqn##*name = } ; fqn=${fqn%.*} ; gen_sed -i "s/@FQN@/${fqn}/g" "${H}/apache/env.conf" ; cp "${H}/apache/openssl.cnf.tpl" "${H}/apache/openssl.cnf" ; gen_sed -i "s/@H@/${EH}/g" "${H}/apache/openssl.cnf" ; gen_sed -i "s/@HOSTNAME@/$(hostname -s)/g" "${H}/apache/openssl.cnf" ; gen_sed -i "s/@FQN@/${fqn}/g" "${H}/apache/openssl.cnf" ; fqnemail=${fqn/./@} ; gen_sed -i "s/@EMAIL@/${fqnemail}/g" "${H}/apache/openssl.cnf" ; "${H}/apache/gen_ssl_key_and_crt.sh" ; "${H}/apache/update_cnf.sh"
