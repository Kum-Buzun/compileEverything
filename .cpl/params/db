premake=gen_sed -i "s/^LDFLAGS \?=[ \\t]/LDFLAGS= -ltcl8.6 /g" ${H}/.cpl/src/@@NAMEVER@@/build_unix/Makefile ; gen_sed -i "s#:/usr/lib/x86_64-linux-gnu\$#:/usr/lib/x86_64-linux-gnu:/lib/x86_64-linux-gnu#g" ${H}/.cpl/src/@@NAMEVER@@/build_unix/Makefile ; gen_sed -i "s#:/usr/lib/i686-linux-gnu\$#:/usr/lib/i686-linux-gnu:/lib/i686-linux-gnu#g" ${H}/.cpl/src/@@NAMEVER@@/build_unix/Makefile
configcmd=../dist/configure --prefix=${HULS}/@@NAMEVER@@ --enable-test --enable-tcl --with-tcl=$H/usr/local/lib --enable-shared --enable-static --enable-compat185 @@WITHOUT_GNU_LD@@
