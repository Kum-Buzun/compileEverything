configcmd=./configure --prefix=${HULS}/@@NAMEVER@@ --enable-shared --enable-static --with-libxml-prefix=${HUL} @@WITH_GNU_LD@@
premake=gen_sed -i "s/^VERSION_SCRIPT_FLAGS.*/VERSION_SCRIPT_FLAGS = /g" "${H}/.cpl/src/@@NAMEVER@@/libxslt/Makefile" ; gen_sed -i "s/^LIBS = $/LIBS = -lgcrypt -lgpg-error -lintl -lgettextlib -lgettextpo /g" "${H}/.cpl/src/@@NAMEVER@@/Makefile" ; gen_sed -i '\''s/\"\/usr\/lib /\"${EHULL} \/usr\/lib /g'\'' ${H}/.cpl/src/@@NAMEVER@@/libtool ; gen_sed -i '\''s/\"\/lib /\"${EHULL} \/lib /g'\'' ${H}/.cpl/src/@@NAMEVER@@/libtool ; gen_sed -i "s/  tmp_libs=$/tmp_libs=;new_libs=\"-lgcrypt -lgpg-error -lintl -lgettextlib -lgettextpo \$new_libs\"/g" ${H}/.cpl/src/@@NAMEVER@@/libtool
