configcmd=none
makecmd=@@cpanm --look Alien::SVN ;  initdir="$(pwd)" ; cpanmwork="$HOME/.cpanm/work/"$(ls -t1 "$HOME/.cpanm/work/" | head -n1) ; echo "cpanmwork ${cpanmwork}" ; ls -1 "$cpanmwork"/. ; cpanmbuild=$(ls -1d "$cpanmwork"/*/ | head -1) ; echo "cpanmbuild ${cpanmbuild}" ; cd "${cpanmwork}/${cpanmbuild}" ; pwd ; ls -alrt ; gen_sed -i "s/^LDFLAGS = @/LDFLAGS = -lintl @/g" src/subversion/Makefile.in ; cpanm . ; cd "${initdir}"
makeinstcmd=none
